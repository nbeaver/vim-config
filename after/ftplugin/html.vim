" Use two spaces as indentation.
setlocal expandtab
setlocal shiftwidth=2
setlocal softtabstop=2
" Check spelling.
set spell

" Autocomplete words from the system dictionary.
set dictionary+=/usr/share/dict/words
set complete+=k
set ignorecase
set infercase
